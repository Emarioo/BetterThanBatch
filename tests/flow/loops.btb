@TEST_CASE(while)
i := 0
sum := 0
while i < 5 {
    sum += i
    i++
}
_test 5; i;
_test 10; sum;
@TEST_CASE(for)
i := 0
for 0..5 {
    _test i; nr;
    i++
}
_test 5; i;
@TEST_CASE(for_rev)
i := 0
N := 5
for @rev (-2)..N {
    _test N - 1 - i; nr;
    i++
}
_test 7; i;
@TEST_CASE(for_ptr)
arr: i32[] {
    0,1,2,3,4
}
for @ptr arr {
    _test nr; *it;
    *it = nr*2
}
for arr {
    _test 2*nr; it;
}

