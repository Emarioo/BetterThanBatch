_test 4; a.first();
_test 8; b.first();

@TEST_CASE(poly_other)


struct Arr<T> {
    ptr: T*;
    a: i32;
    b: i32;
    fn size() -> i32 {
        return size_2();
    }
    fn size_2() -> i32 {
        return sizeof T;
    }
}
struct Big {
    a: i32;
    b: i32;
    c: i32;
}
struct Basket {
    a: i32;
    b: i32;
    arr: Arr<Big>;
}

struct Main {
    bigs: Arr<Big>;
    baskets: Arr<Basket>;

    fn init() -> i32 {
        return baskets.size();
    }
}

ma: Main;

_test 24; ma.init();

