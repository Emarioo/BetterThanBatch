@TEST_CASE(bug_poly_sizeof)

struct Poly<T> {
    t: u32;

    fn first() -> i32 {
        return second();
    }
    fn second() -> i32 {
        // #import "Logger"
        // log("second, size",sizeof T)
        return sizeof T;
    }
}

a: Poly<i32>;
b: Poly<i64>;

// a.first();
// b.first();

