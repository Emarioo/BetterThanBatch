@TEST-CASE globals
#import "OS"

global num: i32;
main();
fn main() -> i32{
    // Bug 0: The address of global variables must be set before they are used in
    //  functions. Functions were evaluated before everything including globals which cause the issue.
    return num;
}

global str: char*;
str = Allocate(16);
*str; // This caused a crash at some point in time

@TEST-CASE other

fn fvoid() {}
@TEST-ERROR ERROR_INVALID_TYPE wawa = fvoid(); // should fail

// standard
a = 1
b: i32 = 1
c: i32;
c = 1
d: i64 = cast<i32>1

// multiple
fn many() -> i32, i32, i32 {
    return 1, 2, 3
}

a = many()
a, b = many()
a, b, c = many();
@TEST-ERROR ERROR_TOO_MANY_VARIABLES @TEST-ERROR ERROR_TYPE_MISMATCH a, b, c, d = many(); // should fail

// shadowing is not implemented yet so we need to scope the assignments
{
    a: i32 = many()
}
{
    a, b: i32 = many()
}
{
    a, b: i32, c = many()
}
{
    a, b, c: i32 = many();
}
{
    a: i64, b: i32 = many() // does this fail or does it cast?
}

