/*
    Cursor movement using escape code
*/

// ifdef does not affect imports
#import "Logger"

#ifdef OS_UNIX


fn set_cursor(x: u32, y: u32) {
    pr("\e[",(x),";",(y),"H")
}
fn move_cursor(x: i32, y: i32) {
    if y > 0 {
        pr("\e[",y,"A");
    } else if y < 0 {
        pr("\e[",-y,"B");
    }
    if x > 0 {
        pr("\e[",x,"C");
    } else if x < 0 {
        pr("\e[",-x,"D");
    }
}

#endif // OS_UNIX