{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Better Than Batch",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#commentline"
		},
		{
			"include": "#commentblock"	
		},
		{
			"include": "#operators"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#preproc"
		},
		{
			"include": "#annotation"
		}
	],
	"repository": {
		"commentline": {
			"name":"comment.line",
			"begin":"//",
			"end":"\n"
		},
		"commentblock": {
			"name": "comment.block",
			"begin": "/\\*",
			"end": "\\*/"
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control",
				"match": "\\b(if|else|while|for|break|continue|fn|return|each|_test_|using|as)\\b"
			},{
				"name": "entity.name.class",
				"match": "\\b(struct)\\b"
			},{
				"name": "entity.name.type.enum",
				"match": "\\b(enum)\\b"
			},{
				"name": "entity.name.namespace",
				"match": "\\b(namespace)\\b"
			}]
		},
		"preproc":{
			"patterns": [{
				"name":"entity.name.selector",
				"match":"(#\\w+)"
			}]
		},
		"annotation": {
			"patterns": [
				{
					"name": "entity.name.tag",
					"match": "(@\\S+)"
				}
			]
		},
		"functions":{
			"patterns": [{
				"name":"entity.name.function",
				"match": "\\b(alloc|free|realloc|printi|printc)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.betterthanbatch",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.betterthanbatch",
					"match": "\\\\."
				}
			]
		},
		"operators":{
			"name":"keyword.operator",
			"patterns": [
				{
					"name": "keyword.operator",
					"match":"(\\=\\=)|(\\=)|(\\+)|(\\-)|(\\*)|(\\/)|(\\<)|(\\>)|(\\&\\&)|(\\!\\=)|(\\|\\|)"
				}
			]
		},
		"numbers": {
			"name": "constant.numeric",
			"patterns": [
				{
					"name": "constant.numeric",
					"match": "(\\b\\d+(\\.)\\d+\\b)|(\\b\\d+\\b)"
				}
			]
		}
	},
	"scopeName": "source.btb"
}